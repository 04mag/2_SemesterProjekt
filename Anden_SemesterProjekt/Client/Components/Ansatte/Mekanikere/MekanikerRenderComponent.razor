<div class="row p-3 mb-3 border border-primary rounded">
    <div class="col-md-6">
        <h4>@Mekaniker.Navn</h4>
    </div>
    <div class="col-md-4">
        <ul>
            @foreach (var mærke in Mekaniker.Mærker)
            {
                <li>@mærke.ScooterMærke</li>
            }
        </ul>
    </div>
    @if (OnSelect.HasDelegate)
    {
        <div class="col-md-2 align-content-center">
            <button class="btn btn-primary float-end" @onclick="() => OnSelect.InvokeAsync(Mekaniker)">Vælg</button>
        </div>
    }
</div>
