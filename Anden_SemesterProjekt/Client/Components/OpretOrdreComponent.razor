@page "/sko"
<div class="row">
    <label class="col-6"> </label>
    <label class="col-1">Antal</label>
    @*  <div class="col-6"> *@
    <label class="col 6"></label>
    @*  </div> *@
</div>
<div class="row">
<div class=" col-6 search-container">
    <input type="text"
           class="form-control"
           placeholder="Søg varer ..."
           @bind="søgeTekst"
           @oninput="OnSearchTextChanged" />
    @if (visForslag)
    {
        <ul class="liste">
            @foreach (var vare in vareForslag)
            {
                
                <li @onclick="() => vælgVare(vare)">
                    @vare.Beskrivelse - @vare.Pris
                </li>
            }
        </ul>
    }
</div>
    <div class="col-1">
        <InputNumber id="antal" @bind-Value="inputAntal" @oninput="@InputChanged" class="form-control" placeholder="Antal" />

    </div>
    <label class="col-1">Totalpris - @totalPris </label>
</div>