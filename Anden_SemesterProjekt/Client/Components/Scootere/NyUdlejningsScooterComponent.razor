
<button class="btn btn-primary" type="button" @onclick="@ShowAddModal">Ny scooter</button>

@if (addModal)
{
    <EditForm Model="nyUdlejningsScooter" OnValidSubmit="HandleValidSubmit">
        <DataAnnotationsValidator/>

        <div class="modal">
            <div class="modal-content">
                <span class="close-button" @onclick="@CloseAddModal">&times;</span>
                <div class="col-12 mb-3">
                    <h3>Tilføj ny scooter</h3>

                    <InputText id="stelnummer" @bind-Value="nyUdlejningsScooter.Stelnummer" class="mb-2 form-control" placeholder="Stelnummer"/>
                    <ValidationMessage For="@(() => nyUdlejningsScooter.Stelnummer)"/>

                    <InputText id="registreringsnummer" @bind-Value="nyUdlejningsScooter.Registreringsnummer" class="mb-2 form-control" placeholder="Registreringsnummer"/>
                    <ValidationMessage For="@(() => nyUdlejningsScooter.Registreringsnummer)"/>

                    <label class="form-label"for="mærke">Mærke:</label>

                    <select @bind="nyScooterMærkeId">
                        <option value="0"> Vælg et mærke...</option>
                        @foreach (var mærke in mærker)
                        {
                            <option value="@mærke.MærkeId">@mærke.ScooterMærke</option>
                            // Første værdi er hvad der bliver bindet, anden værdi er hvad der bliver vist i dropdown
                        }
                    </select>
                </div>
                <button class="btn-primary" type="submit">Tilføj scooter</button>
            </div>
        </div>
    </EditForm>
}
