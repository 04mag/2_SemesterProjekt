
<div>
    <!-- Knap til at åbne modal -->
    <button class="btn btn-primary" @onclick="ShowAddModal">Opret vare</button>

    <!-- Modal HTML -->
    <div id="vareModal" class="modal" style="display: @(addModal ? "block" : "none")">
        <div class="modal-content">
            <span class="close" @onclick="CloseAddModal">&times;</span>
            <h3>Opret ny vare</h3>
            <div>
                <label for="beskrivelse">Beskrivelse:</label>
                <input id="beskrivelse" type="text" @bind="vareModel.Beskrivelse" />
            </div>
            <div>
                <label for="pris">Pris (DKK):</label>
                <input id="pris" type="number" @bind="vareModel.Pris" />
            </div>
            <button @onclick="HandleValidSubmit">Opret vare</button>
        </div>
    </div>
</div>





