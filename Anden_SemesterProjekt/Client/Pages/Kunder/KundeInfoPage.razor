@page "/kunder/{KundeId:int}"
@using Anden_SemesterProjekt.Client.Components.Kunder
@using Anden_SemesterProjekt.Client.Components.Ordrer
@using Anden_SemesterProjekt.Client.Components.Scootere

<PageTitle>Kunde Information</PageTitle>

@if (KundeModel == null)
{
    <p>Indlæser...</p>
}
else if (KundeModel.KundeId == 0)
{
    <p>Kunde ikke fundet</p>
}
else
{
    <PageTitle>@KundeModel.Navn</PageTitle>
    <div class="row p-3">

        <div class="col-12">
            <h4>Kunde information:</h4>
        </div>
        <div class="row mb-3">
            <KundeRenderComponent KundeModel="KundeModel" />
        </div>
        <div class="col-12">
            <h4>Ordrer</h4>
        </div>

        @if (KundeOrdrer.Count > 0)
        {
            <div class="row mb-3">
                <div class="col-12">
                    <OrdreListComponent Ordrer="KundeOrdrer" />
                </div>
            </div>
        }

    </div>


    

}